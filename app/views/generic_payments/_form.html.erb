<%= form_with(model: generic_payment, local: true) do |form| %>
  <fieldset id="generic_payments_fieldset">
    <%= form.fields_for :generic_payment, @generic_payment do %>
      <fieldset class="generic-payment">
        <div class="aligned">
          <%= form.label :counterparty %>
          <%= form.text_field :counterparty %>

          <%= form.label :category %>
          <%= form.text_field :category, list: :category_list %>

          <%= form.label :money_amount %>
          <%= form.number_field :money_amount, step: 0.01 %>

          <%= form.label :money_transfer_date %>
          <%= form.date_field :money_transfer_date %>

          <%= form.label :comment %>
          <%= form.text_field :comment %>
        </div>
      </fieldset>
      <div class="actions">
        <%= form.submit t("generic_payments.edit.submit") %>
      </div>
    <% end %>

    <datalist id="category_list">
      <%= generic_payment_categories
        .map do |cat|
          tag.option value: GenericPayment.human_attribute_name("category.#{cat}")
        end
        .join
        .html_safe %>
    </datalist>
  </fieldset>
<% end %>
